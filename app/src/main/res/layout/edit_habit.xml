<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.mmooneyHabitTracker.edit_habit">

    <TextView
        android:id="@+id/text_habit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Choose a Habit Then press View Habit"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <ListView
        android:id="@+id/myHabits"
        android:layout_width="fill_parent"
        android:layout_height="263dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/text_habit"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/view_Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Habit"
        android:id="@+id/view_Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
